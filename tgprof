<script>
// --- –ß–∞—Å—Ç–∏—Ü—ã ---
const canvas = document.getElementById('particle-canvas');
const ctx = canvas.getContext('2d');

function resizeCanvas() {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
}
window.addEventListener('resize', resizeCanvas);
resizeCanvas();

let mouse = {x: null, y: null};
window.addEventListener('mousemove', e => { mouse.x = e.clientX; mouse.y = e.clientY; });

let particles = [];
const particleCount = 80;
for (let i = 0; i < particleCount; i++) {
  particles.push({
    x: Math.random() * canvas.width,
    y: Math.random() * canvas.height,
    size: Math.random() * 3 + 1,
    speedX: (Math.random() - 0.5) * 0.5,
    speedY: (Math.random() - 0.5) * 0.5,
    opacity: Math.random() * 0.3 + 0.2
  });
}

function drawParticles() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  for (let i = 0; i < particles.length; i++) {
    for (let j = i + 1; j < particles.length; j++) {
      let dx = particles[i].x - particles[j].x;
      let dy = particles[i].y - particles[j].y;
      let dist = Math.sqrt(dx*dx + dy*dy);
      if (dist < 100) {
        let alpha = 0.2 - dist/500;
        if (mouse.x && mouse.y) {
          let mdist = Math.hypot(particles[i].x - mouse.x, particles[i].y - mouse.y);
          if (mdist < 150) alpha += 0.15;
        }
        ctx.beginPath();
        ctx.strokeStyle = `rgba(200,200,255,${alpha})`;
        ctx.lineWidth = 1;
        ctx.moveTo(particles[i].x, particles[i].y);
        ctx.lineTo(particles[j].x, particles[j].y);
        ctx.stroke();
      }
    }
  }

  particles.forEach(p => {
    ctx.beginPath();
    ctx.arc(p.x, p.y, p.size, 0, Math.PI*2);
    ctx.fillStyle = `rgba(200,200,255,${p.opacity})`;
    ctx.fill();

    if(mouse.x && mouse.y){
      let dx = mouse.x - p.x;
      let dy = mouse.y - p.y;
      let dist = Math.sqrt(dx*dx + dy*dy);
      if(dist < 100) { p.x += dx*0.002; p.y += dy*0.002; }
    }

    p.x += p.speedX;
    p.y += p.speedY;

    if (p.x < 0) p.x = canvas.width;
    if (p.x > canvas.width) p.x = 0;
    if (p.y < 0) p.y = canvas.height;
    if (p.y > canvas.height) p.y = 0;
  });

  requestAnimationFrame(drawParticles);
}
drawParticles();

// --- –ê–Ω–∏–º–∞—Ü–∏—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ ---
window.addEventListener('DOMContentLoaded', () => {
  setTimeout(() => document.querySelector('.top-bar').classList.add('show'), 100);
  setTimeout(() => document.querySelector('.ill').classList.add('show'), 250);
  setTimeout(() => document.querySelector('.container').classList.add('show'), 300);
  setTimeout(() => document.querySelector('.footer').classList.add('show'), 500);
});

// --- –ó–≤—É–∫–∏ –∏ –ø—Ä–∞–Ω–∫ —Å –ø–æ–≤—Ç–æ—Ä–µ–Ω–∏–µ–º ---
const soundHoverUrl = 'https://www.soundjay.com/button/beep-07.wav';
const soundClickUrl = 'sound-me.mp3';

function prankRedirect() {
  const audio = new Audio(soundClickUrl);
  audio.volume = 1.0;
  audio.loop = true; // üîπ –∑–≤—É–∫ –ø–æ–≤—Ç–æ—Ä—è–µ—Ç—Å—è
  audio.play().catch(e => console.log('–ó–≤—É–∫ –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω'));

  setTimeout(() => {
    document.body.innerHTML = `
      <div style="display:flex; flex-direction:column; justify-content:center; align-items:center; height:100vh; text-align:center;">
        <h1 style="font-size:36px; color:#007AFF;">–í–∞—Å —Ä–∞–∑—ã–≥—Ä–∞–ª–∏!</h1>
        <p style="font-size:18px; color:#333;">–≠—Ç–æ –±—ã–ª –ø—Ä–∞–Ω–∫. –í–∞—à –∞–∫–∫–∞—É–Ω—Ç –≤ –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏.</p>
      </div>`;
  }, 100);
}

const soundButtons = document.querySelectorAll('.sound-btn');
soundButtons.forEach(btn => {
  btn.addEventListener('click', prankRedirect);
  btn.addEventListener('mouseenter', () => {
    const hoverAudio = new Audio(soundHoverUrl);
    hoverAudio.volume = 0.3;
    hoverAudio.play().catch(e => console.log('–ó–≤—É–∫ hover –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω'));
  });
});

// --- –¢–∞–π–º–µ—Ä ---
const deleteBtn = document.getElementById('deleteBtn');
const deleteSpan = deleteBtn.querySelector('span');
let countdown = 30;
const timer = setInterval(() => {
  deleteSpan.textContent = `–£–¥–∞–ª–∏—Ç—å (${countdown}s)`;
  countdown--;
  if (countdown < 0) { clearInterval(timer); deleteSpan.textContent = '–£–¥–∞–ª–∏—Ç—å'; }
}, 1000);
</script>
